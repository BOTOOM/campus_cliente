#!/bin/sh

fecha="`date '+%Y%m%d'`"
export fecha
su - oracle10 -c "export ORACLE_SID=cnbsdb; expdp \'/ as sysdba\' full=y directory=DATA_PUMP_DIR dumpfile=BK_CNBSDB_prueba$fecha.dmp logfile=BK_CNBSDB_prueba$fecha.log

               grep 'successfully completed' /bkoracle/cnbs/bk/BK_CNBSDB_prueba$fecha.log
               if [ $? -eq 0 ]
               then
  echo '\n Resultado:'
                  echo "Backup terminado exitosamente a las `date`"
else
                  echo "Error al ejecutar el Backup BK_CNBSDB_prueba$fecha.log"
               fi
exit

